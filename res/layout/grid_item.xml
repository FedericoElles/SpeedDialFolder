<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/grid_item" android:orientation="vertical"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<LinearLayout android:orientation="vertical"
		android:layout_width="95dip" android:layout_height="120dip"
		android:gravity="center_horizontal" android:paddingTop="10dip"
		android:paddingBottom="10dip" android:paddingLeft="2dip"
		android:paddingRight="2dip">
		<ImageView android:id="@+id/icon" android:layout_width="48dip"
			android:layout_height="48dip" android:scaleType="fitXY"  
			android:layout_marginBottom="6dip"/>
		<TextView android:id="@+id/title" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center_horizontal"
			android:textColor="#fff" android:maxLines="2" android:background="@drawable/text_background" 
			android:ellipsize="end" />
	</LinearLayout>
</LinearLayout>
